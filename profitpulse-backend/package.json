    "express": "^4.18.3",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.9.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^8.0.1",
    "sequelize": "^6.37.1",
    "swagger-jsdoc": "^6.2.8",
