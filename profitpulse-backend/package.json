{
  "name": "profitpulse-backend",
  "version": "1.0.0",
  "description": "Profitability Intelligence System Backend",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --env-file=.env server.js",
    "start": "node --env-file=.env server.js",
