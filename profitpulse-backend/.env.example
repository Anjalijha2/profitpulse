============================
ProfitPulse Backend Config
============================

# Server
NODE_ENV=development
PORT=5000
API_PREFIX=/api/v1

# MySQL Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=profitpulse_db
DB_USER=root
DB_PASSWORD=root
DB_DIALECT=mysql

# JWT Authentication
JWT_SECRET=profitpulse_jwt_secret_2025_change_in_production
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=profitpulse_refresh_secret_2025_change_in_production
JWT_REFRESH_EXPIRY=7d

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# CORS
CORS_ORIGIN=http://localhost:5173

# System Defaults (configurable via API)
DEFAULT_OVERHEAD_COST=180000
DEFAULT_STANDARD_HOURS=160
